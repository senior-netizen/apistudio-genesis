{
  "name": "@sdl/sync-client",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./react": {
      "types": "./src/react/index.tsx",
      "import": "./src/react/index.tsx",
      "default": "./src/react/index.tsx"
    },
    "./adapters/file": {
      "types": "./src/adapters/file.ts",
      "import": "./src/adapters/file.ts",
      "default": "./src/adapters/file.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@sdl/sync-core": "workspace:*",
    "eventemitter3": "^5.0.1",
    "idb": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
