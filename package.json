{
  "name": "squirrel-api-studio",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/@sdl/*",
    "squirrel/frontend",
    "squirrel/backend",
    "squirrel/gateway",
    "squirrel/microservices/*"
  ],
  "scripts": {
    "dev": "yarn workspace @sdl/web dev",
    "dev:both": "turbo run dev --parallel --filter=@sdl/web --filter=@sdl/squirrel-web --filter=@squirrel/backend",
    "dev:web": "yarn workspace @sdl/web dev",
    "build": "yarn workspaces foreach -A --topological-dev run build",
    "build:web": "yarn workspace @sdl/web build",
    "lint": "eslint . --max-warnings=0",
    "test": "yarn workspaces foreach -A --topological-dev run test",
    "typecheck": "yarn workspaces foreach -A --topological-dev run typecheck",
    "dev:all": "turbo run dev --parallel --filter=apps...",
    "build:all": "turbo run build",
    "lint:all": "turbo run lint",
    "test:all": "turbo run test",
    "smoke:all": "yarn workspaces foreach -A -v --include @sdl/web --include @sdl/squirrel-web --include @squirrel/backend --include squirrel-cli run test:smoke",
    "perf:smoke": "turbo run perf:smoke --filter=perf...",
    "test:sync": "yarn workspace @sdl/sync-core build && yarn workspace @sdl/sync-harness test",
    "docs:build": "turbo run docs:build",
    "probe:health": "node scripts/probe-health.mjs",
    "start:api": "yarn --cwd squirrel/backend start",
    "start:backend": "yarn --cwd squirrel/backend start",
    "start:api-legacy": "yarn --cwd apps/api-legacy start",
    "build:api": "yarn --cwd squirrel/backend build",
    "build:backend": "yarn --cwd squirrel/backend build",
    "build:api-legacy": "yarn --cwd apps/api-legacy build",
    "start:both": "node scripts/start-both.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "turbo": "^2.1.1",
    "typescript": "^5.3.3",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "paynow": "^2.2.2"
  }
}
