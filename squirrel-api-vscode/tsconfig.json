{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["es2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vscode", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test", "src/**/*.spec.ts"]
}
