{
  "name": "squirrel-api-vscode",
  "displayName": "Squirrel API Studio",
  "publisher": "squirrel",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:squirrel.openStudio",
    "onView:@squirrel/vscode/sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "squirrel.openStudio",
        "title": "Squirrel API Studio: Open",
        "category": "Squirrel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "squirrel.openStudio",
          "when": "editorHasSelection",
          "group": "navigation@10"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "squirrelStudio",
          "title": "Squirrel Studio",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "squirrelStudio": [
        {
          "type": "webview",
          "id": "@squirrel/vscode/sidebar",
          "name": "Squirrel Control Center"
        }
      ]
    },
    "configuration": {
      "title": "Squirrel API Studio",
      "properties": {
        "@squirrel.vscode.ai.endpoint": {
          "type": "string",
          "default": "",
          "markdownDescription": "Remote AI endpoint base URL (e.g. `https://api.squirrel.dev`). Extension calls `<endpoint>/ai/assist`."
        },
        "@squirrel.vscode.ai.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Bearer token used for remote AI requests."
        },
        "@squirrel.vscode.ai.model": {
          "type": "string",
          "default": "squirrel-general-v1",
          "markdownDescription": "Model identifier sent to the remote AI endpoint."
        },
        "@squirrel.vscode.ai.timeoutMs": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "markdownDescription": "Remote AI request timeout in milliseconds."
        },
        "@squirrel.vscode.ai.fallbackEnabled": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "When enabled, AI commands fall back to deterministic local responses if remote AI is unavailable."
        },
        "@squirrel.vscode.cloudSync.enable": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable cloud synchronization of projects and analytics snapshots."
        },
        "@squirrel.vscode.cloudSync.endpoint": {
          "type": "string",
          "default": "",
          "markdownDescription": "Cloud sync API base URL."
        },
        "@squirrel.vscode.cloudSync.token": {
          "type": "string",
          "default": "",
          "markdownDescription": "Access token used for cloud sync requests."
        },
        "@squirrel.vscode.cloudSync.workspaceId": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional workspace identifier attached as `X-Workspace` header."
        },
        "@squirrel.vscode.cloudSync.timeoutMs": {
          "type": "number",
          "default": 8000,
          "minimum": 1000,
          "markdownDescription": "Cloud sync request timeout in milliseconds."
        },
        "@squirrel.vscode.cloudSync.retries": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 5,
          "markdownDescription": "Number of retries for failed cloud sync requests."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev:webview": "cd webview-ui && vite build --watch",
    "build:webview": "cd webview-ui && vite build",
    "package": "vsce package",
    "test:auth": "vitest run"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "graphql-request": "^6.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3",
    "vsce": "^2.14.0",
    "vitest": "^1.0.4",
    "@redhat-developer/vscode-extension-tester": "^5.0.0"
  }
}
