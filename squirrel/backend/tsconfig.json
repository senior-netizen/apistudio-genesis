{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "lib": ["es2020", "dom"],
    "paths": {
      "@app/*": ["*"],
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@infra/*": ["infra/*"],
      "@domain/*": ["domain/*"],
      "@events/*": ["events/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src", "test", "prisma", "scripts"],
  "exclude": ["node_modules", "dist"]
}
